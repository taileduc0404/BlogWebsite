@model BlogWebsite.ViewModels.RegisterVM

@{
	Layout = "_LoginLayout";
	ViewData["Title"] = "Register";
}


<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
				<div class="card-body">
					<form asp-action="Register" asp-controller="User" asp-area="Admin">
						<div class="row mb-3">
							<div class="col-md-6">
								<div class="form-floating mb-3 mb-md-0">
									<input asp-for="FirstName" class="form-control" type="text" placeholder="Enter your first name" />
									<label for="inputFirstName">First name</label>
									<span asp-validation-for="FirstName" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-floating">
									<input asp-for="LastName" class="form-control" type="text" placeholder="Enter your last name" />
									<label for="inputLastName">Last name</label>
									<span asp-validation-for="LastName" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" />
							<label for="inputEmail">Email address</label>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="row mb-3">
							<div class="col-md-6">
								<div class="form-floating mb-3 mb-md-0">
									<input asp-for="UserName" class="form-control" type="text" placeholder="Username" />
									<label asp-for="UserName">Username</label>
									<span asp-validation-for="UserName" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-floating mb-3 mb-md-0 position-relative">
									<input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Create a password" />
									<label for="inputPassword">Password</label>
									<span class="eye-icon" onclick="togglePassword()">
										<i class="fa fa-eye-slash" id="eyeIcon" aria-hidden="true"></i>
									</span>
								</div>
								<label>(eg. John@123)</label>
							</div>
						</div>
						<div class="mt-4 mb-0">
							<div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Create Account</button></div>
						</div>
					</form>
				</div>
				<div class="card-footer text-center py-3">
					<div class="small"><a asp-controller="User" asp-action="Login" asp-area="Admin">Have an account? Go to login</a></div>
				</div>
			</div>
		</div>
	</div>
</div>