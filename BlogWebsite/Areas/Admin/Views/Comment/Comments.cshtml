@model BlogWebsite.Models.Post
@{
    ViewData["Title"] = "List Of Comment";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <h2 class="text-primary">@Model.Title</h2>
    <!-- Hiển thị các thông tin khác của bài post -->

    <h3>Comments</h3>
    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments)
        {
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    @comment.ApplicationUsers?.UserName - @comment.CreatedDate.ToLongDateString()
                </div>
                <div class="card-body">
                    <p class="card-text">@comment.Description</p>
                    <!-- Hiển thị thông tin comment -->
                </div>
            </div>
        }
    }
    else
    {
        <p>No comments yet.</p>
    }
</div>
